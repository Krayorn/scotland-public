---
interface Props {
    right?: string;
    left?: string;
}

const { right, left } = Astro.props;
---

<div class="paragraph">
    <div class={`side left ${left ? left : ""}`}>
        <slot name="postit-left" />
    </div>
    <div class="central-row">
        <slot />
    </div>
    <div class={`side right ${right ? right : ""}`}>
        <slot name="postit-right" />
    </div>
</div>

<style>
    .paragraph {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .side {
        width: 100%;
        margin: 25px auto;
    }

    .central-row {
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }

    .bottom {
        align-self: self-end;
    }

    .top {
        align-self: self-start;
    }
    @media screen and (min-width: 992px) {
        .paragraph {
            flex-direction: row;
        }

        .side {
            width: calc((100% - 800px) / 2);
        }
    }
</style>
